<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/header_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".Navbar">



    <ImageView
        android:id="@+id/sidebar"
        android:layout_width="55dp"
        android:layout_height="34dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/sidebar" />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <!-- Shopping Cart Icon -->
        <ImageView
            android:id="@+id/shopping_cart_icon"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="290dp"
            android:contentDescription="Shopping Cart Icon"
            android:src="@drawable/baseline_shopping_bag_24" />

        <!-- Cart Count TextView -->
        <TextView
            android:id="@+id/cartCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/shopping_cart_icon"
            android:textColor="@color/fond_bouton"
            android:textStyle="bold"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>
